[user]
    useConfigOnly = true
    name = Jeremy Stucki

[include]
    path = ~/.machine-specific-gitconfig

[commit]
    gpgsign = true

[core]
    editor = vim
    excludesfile = ~/.gitignore

[diff]
    algorithm = patience
    colorMoved = default

[merge]
    ff = no

[push]
    default = current

[pull]
    rebase = true

[rerere]
    enabled = true

[pretty]
    oneline-extra = format:%C(yellow)%h%Creset%Cred%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset

[alias]
    ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
    l = log --pretty=oneline-extra --date=human
    lg = l --graph

[rebase]
    autosquash = true
    autoStash = true

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    navigate = true
    side-by-side = true
    file-style = bold yellow ul

[interactive]
    diffFilter = delta --color-only 

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
